@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
    {
        <table class="table table-hover">
            <thead class="thead-light">
                <tr role="row">
                    <th scope="col" class="text-center" colspan="2">
                        <h1>Manage KTBook Store</h1>
                    </th>
                    <th scope="col">
                        <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-success">
                            Add new
                        </a>
                    </th>
                    <th scope="col">
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-success">
                            Back to Home
                        </a>
                    </th>
                </tr>
                <tr role="row">
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Status
                    </th>
                    <th style="width: 250px;" class="sorting_disabled" rowspan="1" colspan="1" aria-label="Action">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr role="row" class="odd">
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            <span class="badge badge-success">@item.Status</span>
                        </td>
                        <td class="table-action">
                            <a asp-controller="Categories" asp-action="Details" class="action-icon" asp-route-id="@item.Id">
                                <i class="mdi mdi-eye"></i>
                            </a>
                            <a asp-controller="Categories" asp-action="Edit" class="action-icon" asp-route-id="@item.Id">
                                <i class="mdi mdi-square-edit-outline"></i>
                            </a>
                            <a asp-controller="Categories" asp-action="Delete" class="action-icon" asp-route-id="@item.Id">
                                <i class="mdi mdi-delete"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
