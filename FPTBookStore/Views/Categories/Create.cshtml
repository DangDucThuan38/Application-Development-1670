@model KTBook.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<h1 style="color: blue;text-align: center">
        Manage KTBook Store  <a asp-controller="Categories" asp-action="Create" class="btn btn-success button-add" type="button">
            <i class="fa-solid fa-plus icon-plus" style="padding-top: 10px; color:blue"></i>
        </a>
    </h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Categories" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Status" type="hidden" value="Pending" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>

                </div>
                <div>
                    <br>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br>
    <div class="">
        
        <a  asp-action="Index" class="btn btn-success" style="margin-left: 35%;">
        <i class="mdi mdi-arrow-left" style="text-align: center"></i> Back to List
    </a>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
