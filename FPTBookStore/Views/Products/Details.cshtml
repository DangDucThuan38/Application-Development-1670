@model KTBook.Models.Product

@*KTBook Store Product Details *@

<div class="container">
    <div class="row mt-3 justify-content-between">
        <h1>
            KTBook Store Product Details 
        </h1>
        <a asp-action="Index" class="btn btn-success text-center">
            Back to List
        </a>
    </div>
    <div class="row justify-content-center">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="Product-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" colspan="3">
                                        <h3>@Model.Name</h3>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">Retail Price:</th>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <th scope="row">Available Stock</th>
                                    @if(Model.Quantity > 0)
                                    {
                                        <td>@Model.Quantity</td>
                                    }
                                    else
                                    {
                                        <td>None</td>
                                    }
                                </tr>
                                <tr>
                                    <th scope="row">Description</th>
                                    <td>@Model.Description</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>