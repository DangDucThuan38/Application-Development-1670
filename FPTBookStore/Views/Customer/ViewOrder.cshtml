@model List<Order>
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@{
    double t = 0;
    @foreach (var item in Model)
    {
         t += item.TotalPrice;

    }
}
 <h1 style="color: darkblue;text-align: center">
 History My Order</h1>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body" style="background-color: lightcyan;">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="table-responsive">
                            <table class="table table-borderless table-centered mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Product Name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th> Total </th>
                                        
                                        <th style="width: 50px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {

                                    <tr>
                                        <td>
                                                <img src="~/img/@item.image" height="50" width="50">
                                          
                                        </td>
                                            <td>
                                                <a asp-controller="Customer" asp-action="Details" asp-route-Id="@item.ProductId" class="text-body">@item.ProductName</a>

                                            </td>
                                        <td>
                                            $@item.Price
                                        </td>
                                        <td>
                                            @item.Quantity
                                        </td>
                                        <td> @item.TotalPrice $ </td>
                                    </tr>
                                    }
                                </tbody>


                                 <tfoot>
            <tr>
                <td colspan="3"></td>
                <td>Total Order:</td>
                <td>
                     @t$
                </td>
                <td></td>
            </tr>
        </tfoot>
                            </table>
                       
                    </div> <!-- end col -->
                </div> <!-- end row -->
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>
@*Button*@
<div class="">
    <a asp-controller="Customer" asp-action="Index" class="btn btn-success" style="margin-left: 35%;">
        <i class="mdi mdi-arrow-left" style="text-align: center"></i> Back to Continue Shopping
    </a>
</div>