@model ApplicationUser

@{
    //Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Page Title";
}


<div class="row">
    <div class="col-xl-4 col-lg-5">
        <div class="card text-center">
            <div class="card-body">
                <img src="@ViewBag.Img" class="img-thumbnail" alt="profile-image">

                <h4 class="mb-0 mt-2" >@ViewBag.Fullname</h4>


                <button type="button" class="btn btn-success btn-sm mb-2" style="margin-top:20px">Follow</button>
                <button type="button" class="btn btn-danger btn-sm mb-2" style="margin-top:20px">Message</button>

                <div class="text-left mt-3">
                    <h4 class="font-13 text-uppercase" style="text-align: center">About Me :</h4>
                    <p class="text-muted font-13 mb-3">
                        Hi I'm @ViewBag.Fullname, nice to meet you!.
                    </p>
                    <p class="text-muted mb-2 font-13">
                        <strong>Full Name :</strong> <span class="ml-2">
                            @ViewBag.Fullname
                        </span>
                    </p>
                    <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 ">@ViewBag.Email</span></p>
                    <p class="text-muted mb-2 font-13"><strong>Username :</strong> <span class="ml-2 ">@ViewBag.UserName</span></p>
                    <p class="text-muted mb-1 font-13"><strong>Date of Birth :</strong> <span class="ml-2">@ViewBag.DoB</span></p>
                    <p class="text-muted mb-1 font-13"><strong>Location :</strong> <span class="ml-2">@ViewBag.Address</span></p>
                </div>

                @*Communication*@
                <ul class="social-list list-inline mt-3 mb-0">
                    <li class="list-inline-item">
                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                    </li>
                </ul>
            </div> <!-- end card-body -->
        </div> <!-- end card -->
        <!-- Messages-->
        <div class="card">
            <!-- end card-body-->
        </div> <!-- end card-->

    </div> <!-- end col-->
</div>


